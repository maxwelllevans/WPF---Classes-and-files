<Window
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WPF___Classes_and_files.MainWindow"
        Title="Toy App" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="lstToys" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200" MouseDoubleClick="lstToys_MouseDoubleClick" av:ItemsSource="{av:SampleData ItemCount=5}"/>

        <TextBox x:Name="txtManufacturer" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="210,10,0,0"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="210,40,0,0"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="210,70,0,0" />
        <TextBox x:Name="txtImageURL" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="210,100,0,0"/>

        <Button x:Name="btnAddToy" Content="Add Toy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="210,130,0,0" Click="btnAddToy_Click"/>

        <Image x:Name="imgToy" HorizontalAlignment="Left" Height="100" Margin="420,10,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>